{
  "inputs": [
    {
      "type": "promptString",
      "id": "notion-key",
      "description": "Your Notion integration token. You can get it from https://www.notion.so/my-integrations.",
      "password": true
    }
  ],
  "servers": {
    "notionApi": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer ${input:notion-key}\", \"Notion-Version\": \"2022-06-28\" }"
      }
    }
  }
}
