{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "sonarlint.connectedMode.project": {
    "connectionId": "oaknational",
    "projectKey": "oaknational_ai-experiments"
  },
  "jest.jestCommandLine": "pnpm run test",
  "jest.virtualFolders": [
    {
      "name": "next",
      "rootPath": "apps/nextjs"
    },
    {
      "name": "aila",
      "rootPath": "packages/aila"
    },
    {
      "name": "api",
      "rootPath": "packages/api"
    },
    {
      "name": "core",
      "rootPath": "packages/core"
    },
    {
      "name": "db",
      "rootPath": "packages/db"
    },
    {
      "name": "eslint-config",
      "rootPath": "packages/eslint-config"
    },
    {
      "name": "prettier-config",
      "rootPath": "packages/prettier-config"
    },
    {
      "name": "exports",
      "rootPath": "packages/exports"
    },
    {
      "name": "ingest",
      "rootPath": "packages/ingest"
    },
    {
      "name": "logger",
      "rootPath": "packages/logger"
    },
    {
      "name": "rag",
      "rootPath": "packages/rag"
    }
  ],
  "jest.runMode": "on-demand",
  "peacock.color": "8DA0D3",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "prettier.useEditorConfig": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "typescript.updateImportsOnFileMove.enabled": "always"
}
