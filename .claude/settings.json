{
  "permissions": {
    "allow": [
      "Bash(scripts/check-prs.sh*)",
      "Bash(gh pr checks*)",
      "Bash(gh pr list*)",
      "Bash(gh pr view*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-commit-reminder.sh"
          }
        ]
      }
    ]
  }
}
