{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*.ts",
    "index.ts",
    "*.ts",
    "tests/**/*.ts",
    "../core/src/utils/subjects/index.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["jest"],
    "typeRoots": [
      "./../../node_modules/@types",
      "./src/types",
      "./src/utils/language/*.d.ts"
    ],
    "paths": {
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  }
}
